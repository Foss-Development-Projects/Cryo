@require './components/chat'
@require './components/theme'

:root
	--default-bg-color rgba(0,0,0,0.85)
	--default-fg-color whitesmoke
	// --default-bg-color rgba(255,255,255,0.6)
	// --default-fg-color rgba(0,0,0,0.85)
	--accent-color-1 darkcyan 

*
	padding 0
	margin 0
	box-sizing border-box


html, body 
 	height 100%
 	width 100%

.container
	display flex 
	justify-content center
	align-items center
	height 100%
	width 100%
	padding 5px
	background-image url('./../images/background.webp')
	background-size cover
	background-repeat no-repeat 
	background-position center
	background-attachment fixed