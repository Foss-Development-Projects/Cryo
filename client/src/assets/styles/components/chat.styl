:root 
	--chat-header-section-bg-color red
	--chat-msg-section-bg-color green
	--chat-input-section-bg-color blue
	--chat-scrollbar-bg-color orange
	--chat-scrollbar-fg-color white
	
	--scrollbar-width 5px
	
.chat-container 
	background-color var(--default-bg-color)
	backdrop-filter blur(5px)
	color var(--default-fg-color)
	box-shadow 0 0 10px var(--default-bg-color)
	display grid
	grid-gap 5px
	grid-template-columns 1fr
	grid-template-rows 100px 1fr minmax(200px)
	width 100%
	height 100%
	max-width 700px
	max-height 500px
	border-radius 10px
	padding 5px

.chat-container
	
	&-header-section
		border-radius 5px
		display grid
		background-color var(--default-bg-color)
		align-items center
		justify-content center
		align-content center
		justify-items center
		width 100%
		height 100%
		grid-template-columns 70px 1fr minmax(70px, 150px)
		font-family "Playfair Display SC", sans-serif
		padding 0 5px
		.header-section
			&-title
				font-size 36px
				font-weight 100
			&-logo
				width 40px
				height 40px
				border-radius 50%
				object-fit cover
			&-theme-button
				color white
	&-msg-section
		list-style none
		background-color var(--default-bg-color)
		padding 5px
		border-radius 5px
		overflow hidden
		overflow-y scroll
		scrollbar-width thin
		&::-webkit-scrollbar
			width var(--scrollbar-width)
			background-color var(--default-fg-color)
			border-radius 0 5px 5px 0
			&-thumb {
				border-radius 0 5px 5px 0
				background-color var(--chat-scrollbar-fg-color)
			}
	&-input-section
		background-color var(--default-bg-color)
		color var(--default-fg-color)
		border-radius 5px
		display grid
		// border-top 1px solid var(--default-fg-color)
		align-items center
		justify-content center
		grid-template-columns 1fr 35px
		padding 5px
		&::-wekbit-scrollbar
			width 10px
		.msg-input
			width 100%
			height 100%
			padding 5px
			border-radius 5px
			outline none
			border none
			background none
			color inherit
			font-size 18px
			font-family "Lato", sans-serif
			overflow hidden
			overflow-y scroll
			scrollbar-width none
			resize none
			&::-webkit-scrollbar
				width 5px
			&::placeholder
				color var(--default-fg-color)
		.msg-button
			height 100%
			width 100%
			background none
			outline none
			border none
			height 35px
			width 35px
			font-size 20px
			border-radius 50%
			color var(--default-fg-color)
			transition background-color, color, 200ms ease-in-out
			position relative
			cursor pointer
			i
				position absolute
				top 50%
				left 50%
				transform translate(-50%, -50%);
			&:hover
				transition background-color, color, 200ms ease-in-out
				color var(--default-bg-color)
				background-color var(--default-fg-color)

.chat-msg
	background var(--default-fg-color)
	color var(--default-bg-color)
	max-width 300px
	padding 10px
	border-radius 10px
	margin-bottom 5px

.bot-chat-msg-content
	
.bot-chat-msg
	display flex
	align-items flex-center
	justify-content flex-start
	
.user-chat-msg
	display flex
	align-items flex-center
	justify-content flex-end
	
.chat-msg-text
	font-family "Roboto", sans-serif
	font-size medium
	font-weight 500
	line-height 17px
	
@media (max-width : 400px)
	.chat-container 
		.header-section-title
			font-size 24px
		.header-section-logo
			width 35px
			height 35px
	.chat-msg
		max-width 250px