.chat-container 
	background-color var(--default-bg-color)
	color var(--default-fg-color)
	display grid
	grid-gap 5px
	grid-template-columns 1fr
	grid-template-rows 50px 1fr 50px
	width 100%
	height 100%
	max-width 600px
	max-height 500px
	border-radius 10px
	padding 5px

.chat-container
	&-header-section
		display flex
		align-items center
		justify-content center
		font-family "Playfair Display SC", sans-serif
		h1
			font-size 36px
			font-weight 100
	&-msg-section
		background-color red
		padding 5px
		border-radius 5px
	
	&-input-section
		background-color blue
		border-radius 5px
		display flex
		align-items center
		justify-content center
		padding 5px
		.msg-input
			width 100%
			height 30px
			padding 5px
			border-radius 5px
			outline none
			border none
			background none
			color white
			font-size 18px
			font-family "Lato", sans-serif
			